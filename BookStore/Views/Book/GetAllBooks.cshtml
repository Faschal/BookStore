@model IEnumerable<Book>
@{
    ViewData["Title"] = "List Book";
}

<div class="container">
    <h3 class="display-4">All book list</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@book.CoverImageUrl" alt="Image book" class="img-thumbnail"/>
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-route="book.detail" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View detail</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>